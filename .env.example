# MongoDB
MONGODB_URI=mongodb://localhost:27017/college-job-portal
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/college-job-portal

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_crypto

# JWT
JWT_SECRET=your_jwt_secret_here_generate_with_crypto
JWT_KEY=secret@key
JWT_EXPIRY=604800000
JWT_RESET_TOKEN_EXPIRY=600000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/uploads/resumes

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Gmail SMTP)
FROM_EMAIL=your_email@gmail.com
FROM_PASS=your_gmail_app_password
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Environment
NODE_ENV=development
